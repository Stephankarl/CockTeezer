<%- include('../partials/header') -%>

<div class="container">
    <h1><%= liquor.name %> form</h1>

    <form action="/liquor/<%= liquor.id %>?_method=PUT" method="POST">
        
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="type" placeholder="Type of Alcohol" value="<%= liquor.type %>" required>
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="name" placeholder="Name of Alcohol" value="<%= liquor.name %>" required>
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="category" placeholder="Category of Alcohol" value="<%= liquor.category %>">
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="country" placeholder="Country of Alcohol" value="<%= liquor.country %>">
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="abv" placeholder="ABV of Alcohol" value="<%= liquor.abv %>" required>
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="quantity" placeholder="Quantity of Bottle" value="<%= liquor.quantity %>" required>
            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-secondary form-control">Update</button>
            </div>
        
    </form>

    <a href="/liquor"><button class="btn btn-primary">Back to Liquor</button></a>
    <a href="/liquor/<%= liquor.id %>" class="card-link btn btn-danger">Delete</a>
</div>

<%- include('../partials/footer') -%>