<%- include('../partials/header') -%>

<div class="container">
    <h1><%= mixer.type %> form</h1>

    <form action="/mixers/<%= mixer.id %>?_method=PUT" method="POST">
        
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="type" placeholder="Type of Mixer" value="<%= mixer.type %>" required>
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="name" placeholder="Name of Mixer" value="<%= mixer.name %>">
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" name="quantity" placeholder="Quantity of Bottle" value="<%= mixer.quantity %>" required>
            </div>
            <div class="form-group col-md-6">
                <button type="submit" class="btn btn-secondary form-control">Update</button>
            </div>
        
    </form>

    <a href="/mixers"><button class="btn btn-primary">Back to Mixers</button></a>
    <a href="/mixers/<%= mixer.id %>" class="card-link btn btn-danger">Delete</a>
</div>

<%- include('../partials/footer') -%>